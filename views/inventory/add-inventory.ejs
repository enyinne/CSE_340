<h1>Add New Inventory</h1>

<!-- Flash Messages -->
<% if (messages && Object.keys(messages).length> 0) { %>
    <div class="flash-messages">
        <% Object.keys(messages).forEach(function (type) { %>
            <% messages[type].forEach(function (msg) { %>
                <div class="alert <%= type %>">
                    <%= msg %>
                </div>
                <% }) %>
                    <% }) %>
    </div>
    <% } %>

        <form action="/inv/add-inventory" method="POST" class="auth-form">

            <label for="classification_id">Classification</label>
            <select name="classification_id" id="classification_id" required>
                <option value="">--Select Classification--</option>
                <% classifications.forEach(function(item) { %>
                    <option value="<%= item.classification_id %>" <%=data?.classification_id==item.classification_id
                        ? 'selected' : '' %>>
                        <%= item.classification_name %>
                    </option>
                    <% }) %>
            </select>

            <label for="inv_make">Make</label>
            <input type="text" name="inv_make" id="inv_make" value="<%= data?.inv_make || '' %>" required>

            <label for="inv_model">Model</label>
            <input type="text" name="inv_model" id="inv_model" value="<%= data?.inv_model || '' %>" required>

            <label for="inv_year">Year</label>
            <input type="number" name="inv_year" id="inv_year" value="<%= data?.inv_year || '' %>" required>

            <label for="inv_price">Price</label>
            <input type="number" name="inv_price" id="inv_price" value="<%= data?.inv_price || '' %>" required>

            <label for="inv_mile">Mile</label>
            <input type="number" name="inv_mile" id="inv_mile" value="<%= data?.inv_mile || '' %>" required>

            <label for="inv_color">Color</label>
            <input type="text" name="inv_color" id="inv_color" value="<%= data?.inv_color || '' %>" required>

            <label for="inv_description">Description</label>
            <textarea name="inv_description" id="inv_description" required><%= data?.inv_description || '' %></textarea>

            <label for="inv_image">Image Path</label>
            <input type="text" name="inv_image" id="inv_image" value="<%= data?.inv_image || '' %>" required>

            <label for="inv_thumbnail">Thumbnail Path</label>
            <input type="text" name="inv_thumbnail" id="inv_thumbnail" value="<%= data?.inv_thumbnail || '' %>"
                required>

            <button type="submit">Add Inventory</button>

        </form>